{% extends '::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Search
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('app_homepage') }}"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
    <li class="active">Search : {% if app.request.query.get('search')['keyword'] is defined %}{{ app.request.query.get('search')['keyword'] }}{% endif %}</li>
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-lg-8">

            <h3>Search : {% if app.request.query.get('search')['keyword'] is defined %}{{ app.request.query.get('search')['keyword'] }}{% endif %}</h3>

            <ul>
                {% if searchRecipes is defined %}
                    {% for recipe in searchRecipes  %}
                        <li>{{ recipe.name }}</li>
                    {% endfor %}
                {% else %}
                    <p>Aucun résultat pour les recettes</p>
                {% endif %}
                <hr>
                {% if searchRecipes is defined %}
                    {% for menu in searchMenus %}
                        <li>{{ menu.name }}</li>
                    {% endfor %}
                {% else %}
                    <p>Aucun résultat pour les menus</p>
                {% endif %}

            </ul>

        </div>

        <div class="col-lg-4">
            <aside class="right-sidebar">

                <div class="widget">
                    {{ form_start(form, {'attr': {'role': 'form'} }) }}
                    {{ form_errors(form) }}

                    {{ form_widget(form.keyword, {'attr': {'placeholder': 'Search..'} }) }}

                    {{ form_widget(form.age, {'attr': {'placeholder': 'age (en mois)'} }) }}

                    {{ form_rest(form) }}
                    {{ form_end(form) }}

                    {#<form role="form">#}
                        {#<div class="form-group">#}
                            {#<input type="text" class="form-control" id="s" placeholder="Search..">#}
                        {#</div>#}
                    {#</form>#}
                </div>

            </aside>
        </div>

    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}