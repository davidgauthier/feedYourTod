<div class="widget">
    <h5 class="widgetheading">Random Recipes ({{ listRandomRecipes|length }})</h5>
    <ul class="recent">

        {% if listRandomRecipes|length > 0 %}
            {% for recipe in listRandomRecipes %}
                <li>
                    {% set picture = recipe|photoRecipe %}
                    {% if picture is not empty %}
                        <a href="{{ path('app_recipe', {'id': recipe.id}) }}">
                            {#<img src="{{ asset('public/Sailor/img/dummies/blog/65x65/thumb1.jpg') }}" class="pull-left" alt="" />#}
                            <img class="pull-left" src="{{ asset('uploads/photoRecipes/' ~ picture.src) }}" alt="{{ picture.legend }}" height="65" width="65">
                        </a>
                    {% endif %}

                    <h6><a href="{{ path('app_recipe', {'id': recipe.id}) }}">{{ recipe.name }}</a></h6>

                    <p>
                        {# @var recipe \AppBundle\Entity\Recipe #}
                        {#{{ recipe.subtitle }}#}
                        Mazim alienum appellantur eu cu ullum officiis pro pri
                    </p>
                </li>
            {% endfor %}
        {% endif %}

    </ul>
</div>