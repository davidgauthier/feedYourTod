{%  extends "::layout.html.twig" %}

{% block title %}
    {{ parent() }} - Edit child
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}


{% block breadcrumb %}
    <li><a href="{{ path('app_homepage') }}"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
    <li><a href="{{ path('app_children') }}">My children</a><i class="icon-angle-right"></i></li>
    <li class="active">Edit : {{ child.firstName }}</li>
{% endblock %}


{% block content %}


    <h2>Edit child : {{ child.firstName }}</h2>

    <div class="row">
        <div class="col-sm-12">
            {% include ':child:_form.html.twig' %}
        </div>
    </div>


{% endblock %}


{% block javascripts %}

    {{ parent() }}
    <script src="{{ asset('public/js/childfood.js') }}"></script>

{% endblock %}


