{% extends '::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Login
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('app_homepage') }}"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
    <li class="active">Login</li>
{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% block content %}

    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form role="form" class="register-form" action="{{ path("fos_user_security_check") }}" method="post">

                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <h2>Connexion</h2>
                <hr class="colorgraph">

                <div class="form-group">
                    <input type="text" id="username" name="_username" value="{{ last_username }}"
                           class="form-control input-lg" placeholder="Pseudo ou email" tabindex="4"
                           required autofocus>
                </div>
                <div class="form-group">
                    <input type="password" id="password" name="_password" class="form-control input-lg"
                           placeholder="Mot de passe" tabindex="5" required>
                </div>

                <div class="row">
                    <div class="col-xs-4 col-sm-3 col-md-3">
                        <span class="button-checkbox">
                            <button type="button" class="btn" data-color="info" tabindex="7">Se souvenir de moi</button>
                            <input type="checkbox" id="remember_me" name="_remember_me" class="hidden" value="1">
                        </span>
                    </div>
                </div>

                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-12 col-md-6">
                        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"
                               class="btn btn-primary btn-block btn-lg" tabindex="7">
                    </div>
                    <div class="col-xs-12 col-md-6">Pas encore de compte ? <a href="{{ path("fos_user_registration_register") }}">Enregistrez-vous</a></div>
                </div>
            </form>
        </div>
    </div>


{% endblock %}


{% block javascripts %}
    {{ parent() }}
{% endblock %}








